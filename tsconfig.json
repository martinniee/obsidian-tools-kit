{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["dom", "es5", "scripthost", "ESNext"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules/**/*", "*.config.js", "**/*.js"]
}
